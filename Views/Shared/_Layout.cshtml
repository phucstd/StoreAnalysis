    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

</head>
@{
    string pageName = "";
    switch (ViewContext.RouteData.Values["controller"]?.ToString())
    {
        case "Slot":
            pageName = "Product Management";
            break;
        case "Sale":
            pageName = "Dashboard";
            break;
        case "Home":
            pageName = "Analysis Input";
            break;
        case "History":
            pageName = "Analysis History";
            break;
    }
}
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a class="logo d-flex align-items-center" asp-controller="Sale" asp-action="Index">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">Store Analysis</span>
            </a>
        </div><!-- End Logo -->


    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-heading">Home</li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Sale" ? "" : "collapsed")" asp-controller="Sale" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "" : "collapsed")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-file-earmark"></i>
                    <span>Analysis Input</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Slot" ? "" : "collapsed")" asp-controller="Slot" asp-action="Index">
                    <i class="bi bi-menu-button-wide"></i>
                    <span>Product Management</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "History" ? "" : "collapsed")" asp-controller="History" asp-action="Index">
                    <i class="bi bi-journal-text"></i>
                    <span>Analysis History</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar-->
